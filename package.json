    "allure:clea": "rm -r allure-results/ allure-report cypress/screenshots || true"
  },
  "type": "module",
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "allure-cypress": "^3.0.6",
    "cypress": "^13.15.2",
    "faker-js": "^1.0.0"
  }
}
